server {
    listen 80;
    server_name {{ item }}-{{ tmp_site_name }};
    return 301 https://$server_name$request_uri;
}

server {
    listen 443 ssl http2;
    server_name {{ item }}-{{ tmp_site_name }};

   #SSL
    ssl_certificate /etc/nginx/certs/olua_fullchain.pem;
    ssl_certificate_key /etc/nginx/certs/olua_privkey.pem;

    include /etc/nginx/conf.d/ssl.inc;
    include /etc/nginx/conf.d/static.inc;

    root /home/{{ site_user_name }}/www/{{ item }};
    index  index.php;

    location / {
        try_files $uri $uri/ /index.php?$args;
        if (-f $request_filename) { expires 31d; break; }
        if (!-e $request_filename) { rewrite ^(.+)$ /index.php?$args last; }
    }

    charset utf8;
    client_max_body_size 50m;
    client_body_buffer_size 16k;
    client_header_buffer_size 2k;
    large_client_header_buffers 4 8k;

    location ~ \.php$ {
        fastcgi_split_path_info ^(.+\.php)(.*)$;
        fastcgi_pass   {{ site_name }};
        fastcgi_index  index.php;
        fastcgi_param  HTTPS on;
        fastcgi_param  SCRIPT_FILENAME  $document_root$fastcgi_script_name;
        fastcgi_param  PATH_TRANSLATED  $document_root$fastcgi_script_name;
        fastcgi_param  HTTP_MOD_REWRITE On;

        include fastcgi_params;

        fastcgi_connect_timeout 300s;
        fastcgi_send_timeout 300s;
        fastcgi_read_timeout 1200s;
        fastcgi_buffer_size 32k;
        fastcgi_buffers 8 32k;
        fastcgi_cache_valid 200 301 302 5m;
        fastcgi_cache_valid 404 500 501 502 503 504 505 506 507 509 510 1m;
        fastcgi_cache_valid any 1m;
    }

    access_log /var/log/nginx/{{ item }}.access.log;
    error_log  /var/log/nginx/{{ item }}.error.log;
}
