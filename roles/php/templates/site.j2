[{{ site_name }}]
user = {{ site_user_name }}
group = {{ site_user_name }}

listen = /var/run/php-fpm/{{ site_name }}.sock

listen.owner = nginx
listen.group = nginx
listen.mode = 0660

pm = static
;pm.start_servers = 10 
pm.max_children = 30 
pm.min_spare_servers = 10
pm.max_spare_servers = 20 
pm.max_requests = 10000

pm.process_idle_timeout = 30s
pm.status_path = /phpfpm-status

request_terminate_timeout = 900s
catch_workers_output = no
php_admin_value[sendmail_path] = /usr/sbin/sendmail -t -i -f no-reply@{{ site_name }}

request_slowlog_timeout = 30s
slowlog = /var/log/php-fpm/$pool-slow.log
php_admin_flag[log_errors] = on
php_admin_value[error_log] = /var/log/php-fpm/$pool-error.log
;php_value[error_reporting] = 22519
;php_flag[display_errors] = on

php_value[session.save_handler] = files
php_value[session.save_path]    = /var/lib/php/session-$pool
php_value[soap.wsdl_cache_dir]  = /var/lib/php/wsdlcache-$pool
php_value[opcache.file_cache]   = /var/lib/php/opcache-$pool
